CREATE TABLE message (
    id TEXT PRIMARY KEY NOT NULL,
    role TEXT NOT NULL,
    timestamp TEXT NOT NULL,
    metadata_type TEXT NOT NULL
);

insertMessage:
INSERT INTO message(id, role, timestamp, metadata_type)
VALUES (?, ?, ?, ?);

selectAllMessages:
SELECT * FROM message ORDER BY timestamp ASC;

selectById:
SELECT * FROM message WHERE id = ?;

deleteAllMessages:
DELETE FROM message;

latestMessageId:
SELECT id FROM message ORDER BY timestamp DESC LIMIT 1;